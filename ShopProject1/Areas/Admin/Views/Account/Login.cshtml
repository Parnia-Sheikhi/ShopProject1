@model LoginModel
@{
    ViewBag.Title = "ورود به سایت";
}
<div class="container">
    <div class="cart_info">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="Account" asp-area="admin" method="post">

            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Name">نام</label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">رمز</label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input asp-for="Password" class="form-control" />
            </div>
            <button class="btn btn-primary " type="submit">ورود</button>
        </form>
    </div>
</div>